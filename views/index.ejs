<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="style.css">
    <title>Tantárgyak</title>
</head>
<body id="body-style">
    <main>
        <p><%= error %></p>
        <h1><%- include('name.ejs') %></h1>
    
        <% if (typeof tokenObject !== 'undefined') { %>
            <form action="/auth/logout" method="post">
                <button type="submit">Kijelentkezés</button>
            </form>
        <% } else { %>
            <form action="/auth/login" method="get">
                <button type="submit">Bejelentkezés</button>
            </form>
            
        <% } %>
        
        <h1>Meglévő tantárgyak</h1>
        <% tantargyak.forEach((item) => { %>
            <div class="roundedCorner1" id="<%= item.targyKod%>" onclick="showFilesOfClass('<%= item.targyKod%>')">
                <h3>
                    <a href="/targyak/<%= item.targyKod%> "><%= item.targyNeve %></a>
                </h3>
                <p>Évfolyam: <%= item.evfolyam %></p>
                <p>Kurzusok száma: <%= item.kurzusokSzama %></p>
                <p>Szemináriumok száma: <%= item.szeminariumokSzama %></p>
                <p>Laborok száma: <%= item.laborokSzama %></p>

            </div>
        <% }); %>
    </main>

    <script src="/script.js"></script>
</body>
</html>